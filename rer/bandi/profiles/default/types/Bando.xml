<?xml version="1.0"?>
<object name="Bando"
   meta_type="Factory-based Type Information with dynamic views"
   i18n:domain="rer.bandi" xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <property name="title" i18n:translate="">Bando</property>
  <property name="description"
    i18n:translate="">Bando</property>
  <property name="content_meta_type">Bando</property>
  <property name="content_icon">++resource++bando.png</property>
  <property name="product">rer.bandi</property>
  <property name="factory">addBando</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Image"/>
    <element value="File"/>
    <element value="Link"/>
    <element value="Folder"/>
    <element value="Bando Folder Deepening"/>
  </property>
  <property name="allow_discussion">False</property>
  <property name="default_view">bando_view</property>
  <property name="view_methods">
    <element value="bando_view" />
    <element value="bando_right_view" />
  </property>
  <alias from="(Default)" to="(dynamic view)" />
  <alias from="edit" to="atct_edit" />
  <alias from="sharing" to="@@sharing" />
  <alias from="view" to="(selected layout)" />
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/" visible="True">
    <permission value="View" />
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True">
    <permission value="rer.bandi: Add Bando" />
  </action>
</object>
